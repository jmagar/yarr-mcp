# Unifi MCP Server Configuration
UNIFI_BASE_URL=https://api.ui.com # Or your self-hosted controller URL
UNIFI_API_KEY=your_unifi_api_key_here # Obtain from unifi.ui.com/api

# For local controllers, you might also need UNIFI_USERNAME and UNIFI_PASSWORD (not used by this script directly)
# UNIFI_USERNAME=your_unifi_username
# UNIFI_PASSWORD=your_unifi_password
# UNIFI_SITE_ID=default # Or your specific site ID/name (not used by this script directly for api.ui.com)

# MCP Server Settings
UNIFI_MCP_TRANSPORT=sse # 'sse' or 'stdio'
UNIFI_MCP_HOST=0.0.0.0
UNIFI_MCP_PORT=6969

# Logging
UNIFI_MCP_LOG_LEVEL=INFO # DEBUG, INFO, WARNING, ERROR, CRITICAL
UNIFI_MCP_LOG_FILE=unifi_mcp.log # Log file name

# Deprecated/Old Variables (can be removed if not used elsewhere, script now uses specific ones above)
# UNIFI_URL=https://your-unifi-controller-url # Superseded by UNIFI_BASE_URL
# UNIFI_LOG_LEVEL=INFO # Superseded by UNIFI_MCP_LOG_LEVEL
# UNIFI_NAME=Unifi # Optional: For custom log file naming - Not used by the script's logging setup